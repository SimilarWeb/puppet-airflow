[Unit]
Description= Airflow scheduler
Wants=basic.target
After=basic.target network.target

[Service]
PIDFile = <%= scope['airflow::run_folder'] %>/airflow_scheduler.pid
ExecStart=<%= @cmd_path %>/bin/airflow scheduler
ExecReload=/bin/kill -HUP $MAINPID
Environment="AIRFLOW_HOME=<%= scope['airflow::home_folder'] %>"
Environment="PATH=<%= @cmd_path %>/bin:$PATH"
KillMode=process
Restart=on-failure
RestartSec=15s
User=<%= scope['airflow::user'] %>
Group=<%= scope['airflow::group'] %>

[Install]
WantedBy=multi-user.target
